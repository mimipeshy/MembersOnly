<% @posts.each do |post| %>
      <tr>
       <% if user_signed_in? %>
          <% if !post.user.nil? %>
            <%= post.user.email %>
          <% end %>
        <%end%>
         <td><%= post.title %></td>
        <td><%= post.body %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>